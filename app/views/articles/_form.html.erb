<%= form_for @article do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>

 <p>
	<%= f.label 'title' %>
	<%= f.text_field 'title' %> </br>
</p>

<p>
	<%= f.label 'Body' %>
	<%= f.text_area 'body' %></br>
</p>

<p>
<%= f.submit 'Submit' %>
</p>

<% end %>